<div class="container">
<img src='http://aht.seriouseats.com/images/20100331-fatburger-large.jpg'/>
<img src='http://breslowpartners.files.wordpress.com/2012/05/burger-cheese.jpg'/>
 
  <h1 class="text-center">BURGER BINGE!</h1>
  <div id="well1" class="well">
  <div class="row">

      <div class="col-sm-2"></div>
      <div class="col-sm-4">
  <h2>Un-Devoured Burgers</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
      <li>
        {{burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class="btn btn-success" type="submit">DEVOUR !</button>
        </form>

      </li>

      {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="col-sm-4">
  <h2>Devoured Burgers</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
      <li>
        {{burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button class="btn btn-success" type="submit">Return Burger To List</button>
        </form>

      </li>

      {{/if}}
    {{/each}}
  </ul>
</div>
<div class="col-sm-2"></div>
</div>
</div>
  <div id="well2" class="well">
  <h2>Add a Burger</h2>
  <form action="burgers/new" method="POST">
      <div>
        <label for="burger">Burger Name: </label>
        <input type="text" name="burger_name" required>
      </div>
      <br>
      <button class="btn btn-success" type="submit" name="button">Add Burger</button>
  </form>
</div>
</div>